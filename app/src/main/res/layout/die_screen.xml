    <!-- State: Connected/Disconnected -->

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:layout_gravity="center_horizontal"
        android:checked="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal" >


        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <!-- Separator line -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tp"
    android:background="#FFFFFF">

    <ProgressBar
        android:id="@+id/circularprogressbar1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:progress="0"
        android:max="300"
        android:secondaryProgress="225"
        android:progressDrawable="@drawable/circular" />
    <TextView
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequency"
        android:gravity="center_vertical"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/circularprogressbar1"
        android:layout_alignParentStart="true" />


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:indeterminate="false"
        android:progress="0"
        android:max="300"
        android:secondaryProgress="225"
        android:progressDrawable="@drawable/circular"
        android:layout_alignBottom="@+id/circularprogressbar1"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:id="@+id/circularprogressbar2" />
    <TextView
        android:background="#00000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure"
        android:gravity="right|center_vertical"
        android:layout_gravity="center_vertical"

        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/circularprogressbar2"
        android:layout_alignStart="@+id/circularprogressbar2" />
    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="300"
        android:progress="0"
        android:indeterminate="false"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:layout_below="@+id/seekBar1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView2"
        android:text="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/et1"
        android:layout_alignParentEnd="true" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:checked="false"
        android:text="STATUS"
        android:textOff="OFF"
        android:textOn="ON"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv1"
        android:hint="incoming message"
        android:layout_below="@+id/switch1"
        android:layout_alignParentStart="true" />

</RelativeLayout>

</LinearLayout>